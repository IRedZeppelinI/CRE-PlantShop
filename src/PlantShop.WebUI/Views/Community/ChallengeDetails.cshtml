@model PlantShop.Application.DTOs.Community.DailyChallengeDto
@{
    ViewData["Title"] = $"Desafio de {Model.ChallengeDate.ToLongDateString()}";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">

            <a asp-action="Index" class="btn btn-secondary mb-3">
                <i class="bi bi-arrow-left"></i> Voltar à Comunidade
            </a>

            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header">
                    <h1 class="h3 mb-0">@ViewData["Title"]</h1>
                </div>
                <div class="card-body">
                    <div class="row g-4">
                        <div class="col-md-6">
                            <img src="@Model.ImageUrl" alt="Desafio" class="img-fluid rounded shadow" />
                        </div>
                        <div class="col-md-6">
                            <h3 class="h5">A resposta correta era:</h3>
                            <h2 class="display-6" style="color: var(--primary-green);">@Model.CorrectPlantName</h2>
                        </div>
                    </div>
                </div>
            </div>

            <h3 class="mb-3">Vencedores (@Model.Guesses.Count(g => g.IsCorrect))</h3>

            @if (Model.Guesses.Any(g => g.IsCorrect))
            {
                <ul class="list-group shadow-sm">
                    @foreach (var guess in Model.Guesses.Where(g => g.IsCorrect).OrderBy(g => g.Timestamp))
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <i class="bi bi-trophy-fill text-warning"></i>
                                <strong>@guess.UserName</strong>
                            </div>
                            <small class="text-muted">Adivinhou em: @guess.Timestamp.ToLocalTime().ToString("g")</small>
                        </li>
                    }
                </ul>
            }
            else
            {
                <div class="alert alert-secondary text-center">
                    Ninguém acertou neste desafio.
                </div>
            }

        </div>
    </div>
</div>