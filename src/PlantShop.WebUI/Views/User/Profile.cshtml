@model PlantShop.WebUI.Models.User.ProfileViewModel
@{
    ViewData["Title"] = "O Meu Perfil";
}

<h1 class="mb-4" style="color: var(--primary-green);">Olá, @Model.FullName!</h1>
<p class="lead">Bem-vindo ao seu perfil. Aqui pode gerir a sua morada de envio e consultar o seu histórico de encomendas.</p>

<hr />

@if (ViewData["ProfileMessage"] != null)
{
    <div class="alert alert-success" role="alert">
        <i class="bi bi-check-circle-fill"></i> @ViewData["ProfileMessage"]
    </div>
}


<div class="row g-5 mt-3">

    <div class="col-lg-4">
        <h4>A Minha Morada</h4>
        <p class="text-muted small">Esta morada será utilizada para todas as suas futuras encomendas.</p>

        <div class="card shadow-sm border-0">
            <div class="card-body">
                <form asp-action="Profile" method="post">
                    @Html.AntiForgeryToken()

                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                    <div class="form-floating">
                        <textarea asp-for="AddressInfo.Address" class="form-control"
                                  placeholder="Introduza a sua morada completa"
                                  style="height: 150px"></textarea>
                        <label asp-for="AddressInfo.Address"></label>
                        <span asp-validation-for="AddressInfo.Address" class="text-danger"></span>
                    </div>

                    <div class="d-grid mt-3">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save-fill"></i> Guardar Morada
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-lg-8">
        <h4>O Meu Histórico de Encomendas</h4>

        @if (!Model.OrderHistory.Any())
        {
            <div class="alert alert-secondary text-center" style="background-color: var(--secondary-light-green);">
                <i class="bi bi-info-circle"></i> Ainda não efetuou nenhuma encomenda.
            </div>
        }
        else
        {
            <div class="table-responsive shadow-sm">
                <table class="table table-striped table-hover align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>Nº</th>
                            <th>Data</th>
                            <th>Total</th>
                            <th class="text-center">Estado</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model.OrderHistory)
                        {
                            <tr>
                                <td><strong>#@order.Id.ToString("D6")</strong></td>
                                <td>@order.OrderDate.ToLocalTime().ToString("g")</td>
                                <td class="fw-bold">@order.TotalPrice.ToString("C")</td>
                                <td class="text-center">
                                    <span class="badge
                                                  @(order.OrderStatus == "Pendente" ? "bg-warning text-dark" : "bg-success")">
                                        @order.OrderStatus
                                    </span>
                                </td>
                                <td class="text-end">
                                    <a asp-action="OrderDetails" asp-route-orderId="@order.Id"
                                       class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-search"></i> Detalhes
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}