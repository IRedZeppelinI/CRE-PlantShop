@model PlantShop.WebUI.Models.Shop.ShopViewModel
@{
    ViewData["Title"] = "Loja";

    var currentUrl = Context.Request.Path + Context.Request.QueryString;
}

<div class="container mt-4">
    <div class="row">
        <div class="col-lg-3">
            <h2 class="h4 mb-3">Categorias</h2>
            <div class="list-group shadow-sm">
                <a asp-controller="Shop" asp-action="Index" asp-route-categoryId=""
                   class="list-group-item list-group-item-action
                    @(Model.SelectedCategoryId == null ? "active" : "")">
                    Todas as Categorias
                </a>

                @foreach (var category in Model.Categories)
                {
                    <a asp-controller="Shop" asp-action="Index" asp-route-categoryId="@category.Id"
                       class="list-group-item list-group-item-action
                                  @(Model.SelectedCategoryId == category.Id ? "active" : "")">
                        @category.Name
                    </a>
                }
            </div>
        </div>

        <div class="col-lg-9">
            <h1 class="h3 mb-3">Os Nossos Produtos</h1>
            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">

                @foreach (var article in Model.Articles)
                {
                    <div class="col">
                        <div class="card h-100 shadow-sm border-0">
                            @if (!string.IsNullOrEmpty(article.ImageUrl))
                            {
                                <img src="@article.ImageUrl" class="card-img-top"
                                     alt="@article.Name"
                                     style="height: 200px; object-fit: cover;">
                            }
                            else
                            {
                                <img src="https://via.placeholder.com/300x200.png?text=Sem+Imagem"
                                     class="card-img-top" alt="Sem Imagem"
                                     style="height: 200px; object-fit: cover;">
                            }

                            <div class="card-body d-flex flex-column">
                                <small class="text-muted">@article.CategoryName</small>

                                <h5 class="card-title mt-2">
                                    @article.Name
                                </h5>

                                <h4 class="card-text text-success fw-bold my-2">
                                    @article.Price.ToString("C")
                                </h4>
                                
                                <div class="mt-auto">
                                    <div class="d-grid gap-2">
                                        <a asp-controller="Shop" asp-action="Details" asp-route-id="@article.Id"
                                           class="btn btn-outline-primary">
                                            <i class="bi bi-search"></i> Detalhes
                                        </a>

                                        <form asp-controller="Cart" asp-action="Add" method="post" class="d-grid">
                                            <input type="hidden" name="ArticleId" value="@article.Id" />
                                            <input type="hidden" name="Quantity" value="1" /> <input type="hidden" name="returnUrl" value="@currentUrl" /> <button type="submit" class="btn btn-primary"
                                                                                                                                                                   @(article.StockQuantity > 0 ? "" : "disabled")>

                                                <i class="bi bi-cart-plus-fill"></i>
                                                @(article.StockQuantity > 0 ? "Adicionar" : "Esgotado")
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }

                @if (!Model.Articles.Any())
                {
                    <div class="col-12">
                        <p class="text-muted">Não foram encontrados artigos nesta categoria.</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>