@model PlantShop.Application.DTOs.Shop.ArticleDto
@{
    ViewData["Title"] = Model.Name;

    var currentUrl = Context.Request.Path + Context.Request.QueryString;
}

<div class="container mt-5">
    <div class="row">
        <div class="col-lg-6">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Model.ImageUrl" class="img-fluid rounded shadow-lg"
                     alt="@Model.Name" style="max-height: 500px; width: 100%; object-fit: cover;">
            }
            else
            {
                <img src="https://via.placeholder.com/600x500.png?text=Sem+Imagem"
                     class="img-fluid rounded shadow-lg" alt="Sem Imagem">
            }
        </div>

        <div class="col-lg-6">
            <small class="text-muted">@Model.CategoryName</small>

            <h1 class="display-5">@Model.Name</h1>

            <h2 class="display-6 text-success fw-bold">@Model.Price.ToString("C")</h2>

            <p class="lead mt-3">@Model.Description</p>

            <hr />

            <form asp-controller="Cart" asp-action="Add" method="post">

                <input type="hidden" name="ArticleId" value="@Model.Id" />
                <input type="hidden" name="returnUrl" value="@currentUrl" />

                @if (Model.StockQuantity > 0)
                {
                    <div class="row g-2 align-items-end">
                        <div class="col-md-3">
                            <label for="quantity" class="form-label">Quantidade:</label>
                            <input type="number" class="form-control"
                                   id="quantity" name="Quantity"
                                   value="1" min="1" max="@Model.StockQuantity">
                        </div>
                        <div class="col-md-9">
                            <button type="submit" class="btn btn-primary btn-lg w-100">
                                <i class="bi bi-cart-plus-fill"></i> Adicionar ao Carrinho
                            </button>
                        </div>
                    </div>
                    <small class="text-muted mt-2">
                        Em Stock: @Model.StockQuantity unidades
                    </small>
                }
                else
                {
                    <p class="text-danger fs-5 fw-bold">Esgotado</p>
                    <button type="submit" class="btn btn-primary btn-lg w-100" disabled>
                        <i class="bi bi-cart-plus-fill"></i> Adicionar ao Carrinho
                    </button>
                }
            </form>

            <div class="mt-4">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Voltar à Loja
                </a>
            </div>

        </div>
    </div>
</div>