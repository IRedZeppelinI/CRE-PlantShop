@model PlantShop.WebUI.Models.Home.HomeViewModel
@{
    ViewData["Title"] = "PlantShop";
}

<div class="container-fluid py-5 text-center text-white"
     style="background: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)),
            url('/images/stock/hero-background.png'); background-size: cover; background-position: center;">
    <h1 class="display-4 fw-bold">Bem-vindo à PlantShop</h1>
    <p class="fs-4 col-md-8 mx-auto">O seu oásis online para plantas, flores e tudo o que precisa para o seu jardim.</p>
    <a asp-controller="Shop" asp-action="Index" class="btn btn-primary btn-lg mt-3">Ver a Loja</a>
</div>

<div class="container mt-5">
    <h2 class="text-center mb-4">Em Destaque Esta Semana</h2>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var article in Model.FeaturedArticles)
        {
            <div class="col">
                <div class="card h-100 shadow-sm border-0">
                    <a asp-controller="Shop" asp-action="Details" asp-route-id="@article.Id">
                        <img src="@article.ImageUrl" class="card-img-top"
                             alt="@article.Name"
                             style="height: 200px; object-fit: cover;">
                    </a>

                    <div class="card-body d-flex flex-column">
                        <small class="text-muted">@article.CategoryName</small>
                        <h5 class="card-title mt-2">@article.Name</h5>
                        <h4 class="card-text text-success fw-bold my-2">
                            @article.Price.ToString("C")
                        </h4>

                        <div class="mt-auto">
                            <a asp-controller="Shop" asp-action="Details" asp-route-id="@article.Id"
                               class="btn btn-outline-primary w-100">
                                <i class="bi bi-search"></i> Ver Detalhes
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<div class="container-fluid mt-5 py-5" style="background-color: var(--secondary-light-green);">
    <div class="container">
        <div class="row g-4 align-items-center">
            <div class="col-md-6">
                <h2 class="display-6 fw-bold">Junte-se à nossa Comunidade</h2>
                <p class="lead">Participe no nosso desafio diário ou peça ajuda à comunidade para identificar aquela planta misteriosa.</p>
            </div>
            <div class="col-md-6">
                <div class="card shadow-sm border-0 mb-3">
                    <div class="card-body d-flex align-items-center">
                        <span class="fs-1 me-4" style="color: var(--primary-green);"><i class="bi bi-patch-question-fill"></i></span>
                        <div>
                            <h5 class="card-title mb-1">Desafio Diário</h5>
                            <p class="card-text text-muted mb-2">Acha que consegue adivinhar a planta de hoje?</p>
                            <a asp-controller="Community" asp-action="Index" class="btn btn-primary">Participar</a>
                        </div>
                    </div>
                </div>
                <div class="card shadow-sm border-0">
                    <div class="card-body d-flex align-items-center">
                        <span class="fs-1 me-4" style="color: var(--primary-green);"><i class="bi bi-camera-fill"></i></span>
                        <div>
                            <h5 class="card-title mb-1">Pedir Ajuda</h5>
                            <p class="card-text text-muted mb-2">Carregue uma foto e deixe os nossos peritos ajudar.</p>
                            <a asp-controller="Community" asp-action="CreatePost" class="btn btn-outline-primary">Pedir Ajuda</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

