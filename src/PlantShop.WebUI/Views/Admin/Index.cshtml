@model IEnumerable<PlantShop.Application.DTOs.Shop.CategoryDto>
@{
    ViewData["Title"] = "Dashboard do BackOffice";
}

<h1>@ViewData["Title"]</h1>
<p>Bem-vindo à área de administração, @User.Identity?.Name.</p>

<hr />

<div class="row g-4 mt-3">

    <div class="col-md-4">
        <div class="card h-100 shadow-sm border-0">
            <div class="card-body text-center">
                <span class="fs-1" style="color: var(--primary-green);">
                    <i class="bi bi-box-seam-fill"></i>
                </span>
                <h5 class="card-title mt-2">Gestão de Encomendas</h5>
                <p class="card-text text-muted">
                    Consultar o histórico de encomendas e o estado.
                </p>
                <a asp-action="Orders" class="btn btn-primary">Gerir Encomendas</a>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card h-100 shadow-sm border-0">
            <div class="card-body text-center">
                <span class="fs-1" style="color: var(--primary-green);">
                    <i class="bi bi-people-fill"></i>
                </span>
                <h5 class="card-title mt-2">Gestão de Utilizadores</h5>
                <p class="card-text text-muted">
                    Gerir os utilizadores registados e as suas permissões (roles).
                </p>
                <a asp-action="Users" class="btn btn-primary">Gerir Utilizadores</a>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card h-100 shadow-sm border-0">
            <div class="card-body text-center">
                <span class="fs-1" style="color: var(--primary-green);">
                    <i class="bi bi-flower1"></i>
                </span>
                <h5 class="card-title mt-2">Gestão de Artigos</h5>
                <p class="card-text text-muted">
                    Adicionar novos artigos à loja, gerir stock e preços.
                </p>
                <a asp-action="Articles" class="btn btn-primary">Gerir Artigos</a>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card h-100 shadow-sm border-0">
            <div class="card-body text-center">
                <span class="fs-1" style="color: var(--primary-green);">
                    <i class="bi bi-tags-fill"></i>
                </span>
                <h5 class="card-title mt-2">Gestão de Categorias</h5>
                <p class="card-text text-muted">
                    Criar, ver, editar e apagar categorias de produtos.
                </p>
                <a asp-action="Categories" class="btn btn-primary">Gerir Categorias</a>
            </div>
        </div>
    </div>    

</div>