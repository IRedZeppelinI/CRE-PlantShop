@model IEnumerable<PlantShop.Application.DTOs.Shop.OrderDto>
@{
    ViewData["Title"] = "Gestão de Encomendas";
}

<h1>@ViewData["Title"]</h1>
<p>Listagem de todas as encomendas recebidas pela loja.</p>

<div class="table-responsive shadow-sm mt-4">
    <table class="table table-striped table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th>Enc. Nº</th>
                <th>Cliente</th>
                <th>Data</th>
                <th class="text-center">Estado</th>
                <th class="text-end">Total</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="6" class="text-center p-4">
                        Ainda não existem encomendas.
                    </td>
                </tr>
            }

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <strong>#@item.Id.ToString("D6")</strong>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FullName)
                        <br>
                        <small class="text-muted">ID: @item.UserId</small>
                    </td>
                    <td>
                        @item.OrderDate.ToLocalTime().ToString("g")
                    </td>
                    <td class="text-center">
                        <span class="badge
                                  @(item.OrderStatus == "Pendente" ? "bg-warning text-dark" : "bg-success")">
                            @item.OrderStatus
                        </span>
                    </td>
                    <td class="text-end fw-bold">
                        @item.TotalPrice.ToString("C")
                    </td>
                    <td class="text-end">
                        <a asp-action="OrderDetails" asp-route-id="@item.Id"
                           class="btn btn-sm btn-primary">
                            <i class="bi bi-search"></i> Ver Detalhes
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>