@model IEnumerable<PlantShop.WebUI.Models.Admin.UserListViewModel>
@{
    ViewData["Title"] = "Gestão de Utilizadores";
}

<h1>@ViewData["Title"]</h1>
<p>Listagem de todos os utilizadores registados na plataforma.</p>

@if (TempData["UserMessage"] != null)
{
    <div class="alert alert-success" role="alert">
        @TempData["UserMessage"]
    </div>
}
@if (TempData["UserError"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["UserError"]
    </div>
}


<div class="table-responsive shadow-sm mt-4">
    <table class="table table-striped table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th>Username</th>
                <th>Nome Completo</th>
                <th>Email</th>
                <th>Roles (Funções)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (!Model.Any())
            {
                <tr>
                    <td colspan="5" class="text-center p-4">
                        Não foram encontrados utilizadores.
                    </td>
                </tr>
            }

            @foreach (var user in Model)
            {
                <tr>
                    <td>
                        <strong>@user.UserName</strong>
                    </td>
                    <td>
                        @user.FullName
                    </td>
                    <td>
                        @user.Email
                    </td>
                    <td>
                        @if (user.Roles.Any())
                        {
                            @foreach (var role in user.Roles)
                            {
                                <span class="badge
                                                  @(role == "Admin" ? "bg-danger" : "bg-secondary")">
                                    @role
                                </span>
                            }
                        }
                        else
                        {
                            <span class="badge bg-light text-dark">N/A</span>
                        }
                    </td>
                    <td class="text-end">
                        <a asp-action="ManageRoles" asp-route-id="@user.UserId"
                           class="btn btn-sm btn-warning">
                            <i class="bi bi-pencil-fill"></i> Gerir Roles
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>