@model PlantShop.WebUI.Models.Admin.DailyChallengeFormViewModel
@{
    ViewData["Title"] = "Gerir Desafio Diário";
}

<h1>@ViewData["Title"]</h1>
<hr />

<div class="row">
    <div class="col-md-8">
        <form asp-action="ManageChallenge" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <div class="mb-3">
                        <label asp-for="ChallengeDate" class="form-label"></label>
                        <input asp-for="ChallengeDate" type="date" class="form-control" />
                        <span asp-validation-for="ChallengeDate" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Challenge.CorrectPlantName" class="form-label">Resposta Correta</label>
                        <input asp-for="Challenge.CorrectPlantName" class="form-control" placeholder="Ex: Rosa Vermelha" />
                        <span asp-validation-for="Challenge.CorrectPlantName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ImageFile" class="form-label"></label>
                        <input asp-for="ImageFile" type="file" class="form-control" accept="image/*" />
                        @if (string.IsNullOrEmpty(Model.Challenge.ImageUrl))
                        {
                            <small class="text-danger">A imagem é obrigatória para um novo desafio.</small>
                        }
                        <span asp-validation-for="ImageFile" class="text-danger"></span>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Challenge.ImageUrl))
                    {
                        <div class="mb-3">
                            <label class="form-label">Imagem Atual:</label>
                            <div>
                                <img src="@Model.Challenge.ImageUrl" alt="Imagem do Desafio" style="max-height: 200px; border-radius: 5px;" />
                            </div>
                        </div>
                    }

                    <div class="mt-4">
                        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                        <button type="submit" class="btn btn-primary">Guardar Desafio</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}